{
  "version": 2,
  "builds": [{
    "src": "package.json",
    "use": "@vercel/node-builder",
    "config": {
      "buildCommand": "npx vite build",
      "outputDirectory": "dist"
    }
  }],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
